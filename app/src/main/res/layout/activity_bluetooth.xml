<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".bluetooth">

    <ListView
        android:id="@+id/bluetooth_found_devices"
        android:layout_width="387dp"
        android:layout_height="656dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.497" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="359dp"
        android:layout_height="47dp"
        android:text="@string/bluetooth_search"
        app:layout_constraintBottom_toTopOf="@+id/bluetooth_found_devices"
        app:layout_constraintStart_toStartOf="@+id/bluetooth_found_devices" />
</androidx.constraintlayout.widget.ConstraintLayout>